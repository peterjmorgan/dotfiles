#!/bin/sh

export PATH="$PATH:/home/$USER/bin"
KEY="/home/$USER/key.txt"

if [ ! -f $KEY ]; then
    age --decrypt --output $KEY "{{ .chezmoi.sourceDir }}/key.txt.age"
    chmod 600 $KEY
fi

