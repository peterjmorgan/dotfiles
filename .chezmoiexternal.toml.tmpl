[".tmux_runtime"]
    type = "archive"
    url = "https://github.com/gpakosz/.tmux/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"

{{- $ageVersion := "1.0.0" }}
[".local/bin/age"]
    type = "file"
    url = "https://github.com/FiloSottile/age/releases/download/v{{ $ageVersion }}/age-v{{ $ageVersion }}-{{ .chezmoi.os }}-{{ .chezmoi.arch }}.tar.gz"
    executable = true
    [".local/bin/age".filter]
        command = "tar"
        args = ["--extract", "--file", "/dev/stdin", "--gzip", "--to-stdout", "age/age"]

{{- $justVersion := "1.13.0" }}
[".local/bin/just"]
	type = "file"
	url = "https://github.com/casey/just/releases/download/v{{ $justVersion }}/just-v{{ $justVersion }}-{{ .chezmoi.arch }}-{{ .chezmoi.os }}.tar.gz"
	executable = true
	[".local/bin/just".filter]
		command = "tar"
		args = ["--extract", "--file", "/dev/stdin", "--gzip", "--to-stdout", "just"]
